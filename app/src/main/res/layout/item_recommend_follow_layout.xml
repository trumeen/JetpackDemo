<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="recommendItem"
            type="io.github.trumeen.bean.RecommendItemBean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            app:radius="@{@dimen/dp_4}"
            app:imgUrl="@{recommendItem.data.content.data.cover.detail}"
            android:id="@+id/iv_content"
            android:layout_marginBottom="@dimen/dp_9"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_180"/>

        <TextView
            app:minutesText="@{recommendItem.data.content.data.duration}"
            android:paddingStart="@dimen/dp_3"
            android:paddingEnd="@dimen/dp_3"
            android:background="@drawable/shape_bg_time"
            android:textSize="@dimen/dp_16"
            android:textColor="@color/text_white"
            tools:text="01:08"
            android:fontFamily="@font/dinnextltpro_condensed"
            app:layout_constraintEnd_toEndOf="@id/iv_content"
            android:layout_marginBottom="@dimen/dp_7"
            android:layout_marginEnd="@dimen/dp_5"
            app:layout_constraintBottom_toBottomOf="@id/iv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_marginTop="@dimen/dp_10"
            app:radius="@{@dimen/dp_40}"
            android:id="@+id/iv_head"
            android:layout_marginBottom="@dimen/dp_9"
            app:imgUrl="@{recommendItem.data.header.icon}"
            app:layout_constraintTop_toBottomOf="@id/iv_content"
            app:layout_constraintBottom_toTopOf="@id/view_line"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_width="@dimen/dp_40"
            android:layout_height="@dimen/dp_40"/>

        <TextView
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginStart="@dimen/dp_12"
            app:layout_constraintStart_toEndOf="@+id/iv_head"
            android:id="@+id/tv_title"
            tools:text="@string/menu_community"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/text_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{recommendItem.data.header.title}"
            app:layout_constraintTop_toBottomOf="@id/iv_content" />

        <TextView
            android:layout_marginTop="@dimen/dp_2"
            android:layout_marginStart="@dimen/dp_12"
            app:layout_constraintStart_toEndOf="@+id/iv_head"
            android:id="@+id/tv_tag"
            android:textColor="@color/text_7d"
            tools:text="@string/api_data_parse_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{recommendItem.data.header.description}"
            app:layout_constraintTop_toBottomOf="@id/tv_title" />

        <View
            android:background="@color/line_ed"
            android:id="@+id/view_line"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/dp_11"
            android:layout_width="match_parent"
            android:layout_height="1px"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>