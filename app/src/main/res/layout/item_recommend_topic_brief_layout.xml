<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="recommendItem"
            type="io.github.trumeen.bean.RecommendItemBean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <ImageView
            android:layout_marginStart="@dimen/dp_15"
            app:imgUrl="@{recommendItem.data.icon}"
            app:radius="@{@dimen/dp_4}"
            android:id="@+id/iv_head"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/view_line"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_50"/>

        <TextView
            android:textSize="@dimen/dp_14"
            android:layout_marginEnd="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_2"
            android:textColor="@color/text_black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/iv_head"
            android:layout_marginStart="@dimen/dp_12"
            android:text="@{recommendItem.data.title}"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_marginEnd="@dimen/dp_15"
            android:textSize="@dimen/dp_12"
            android:layout_marginBottom="@dimen/dp_2"
            android:textColor="@color/text_7d"
            app:layout_constraintStart_toEndOf="@id/iv_head"
            android:layout_marginStart="@dimen/dp_13"
            android:text="@{recommendItem.data.description}"
            app:layout_constraintBottom_toTopOf="@id/view_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <View
            android:layout_marginEnd="@dimen/dp_15"
            android:background="@color/line_ed"
            android:id="@+id/view_line"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="match_parent"
            android:layout_height="1px"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>