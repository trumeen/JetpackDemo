<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="android.view.View" />
    <variable
        name="recommendItem"
        type="io.github.trumeen.bean.RecommendItemBean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingTop="@dimen/dp_17"
        android:layout_width="match_parent"
        android:paddingBottom="@dimen/dp_5"
        android:layout_height="wrap_content">

        <TextView
            android:visibility="@{recommendItem.data.follow==null?View.GONE : View.VISIBLE}"
            android:layout_marginStart="@dimen/dp_15"
            android:drawablePadding="@dimen/dp_10"
            android:id="@+id/tv_title"
            android:textColor="@color/text_black"
            android:layout_width="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="wrap_content"
            android:text="@{recommendItem.data.text}"
            android:textStyle="bold"
            android:textSize="@dimen/dp_22"
            tools:text="每日开眼精选"
            android:drawableEnd="@drawable/ic_enter"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:visibility="@{recommendItem.data.follow==null?View.GONE : View.VISIBLE}"
            android:textSize="@dimen/dp_10"
            android:textColor="@color/text_black"
            android:background="@drawable/shape_bg_text"
            android:layout_marginEnd="@dimen/dp_15"
            android:paddingTop="@dimen/dp_2"
            android:paddingBottom="@dimen/dp_5"
            android:paddingStart="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_8"
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_follow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:visibility="@{recommendItem.data.follow==null?View.VISIBLE : View.GONE}"
            android:drawableEnd="@drawable/ic_enter_blue"
            android:drawablePadding="@dimen/dp_5"
            android:id="@+id/textView3"
            android:textColor="@color/text_blue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/dp_16"
            android:text="@{recommendItem.data.text}"
            android:layout_marginEnd="@dimen/dp_15"
            tools:text="TextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>