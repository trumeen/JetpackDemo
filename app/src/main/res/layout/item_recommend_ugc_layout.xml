<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="recommendItem"
            type="io.github.trumeen.bean.RecommendItemBean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_10">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:text="@{recommendItem.data.header.title}"
            android:textColor="@color/text_black"
            android:textSize="@dimen/dp_22"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/card_view"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="每日开眼精选" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/dp_15"
            android:drawableEnd="@drawable/ic_enter_blue"
            android:drawablePadding="@dimen/dp_5"
            android:text="@{recommendItem.data.header.rightText}"
            android:textColor="@color/text_blue"
            android:textSize="@dimen/dp_16"
            app:layout_constraintBottom_toTopOf="@id/card_view"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="TextView" />

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            app:cardCornerRadius="@dimen/dp_4"
            app:layout_constraintTop_toBottomOf="@id/tv_title">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginTop="@dimen/dp_5"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_180">

                <ImageView
                    app:layout_constraintHorizontal_weight="0.6"
                    android:id="@+id/iv_left"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dp_180"
                    app:imgUrl="@{recommendItem.data.itemList.get(0).data.cover.detail}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/iv_right1"
                    app:layout_constraintStart_toStartOf="parent" />

                <ImageView
                    app:layout_constraintEnd_toEndOf="@id/iv_left"
                    app:layout_constraintBottom_toBottomOf="@id/iv_left"
                    android:layout_width="@dimen/dp_15"
                    android:layout_height="@dimen/dp_15"/>

                <ImageView
                    app:layout_constraintHorizontal_weight="0.4"
                    android:id="@+id/iv_right1"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="@dimen/dp_2"
                    app:imgUrl="@{recommendItem.data.itemList.get(1).data.cover.detail}"
                    app:layout_constraintBottom_toTopOf="@id/iv_right2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/iv_left"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    app:layout_constraintHorizontal_weight="0.4"
                    android:id="@+id/iv_right2"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="@dimen/dp_2"
                    android:layout_marginTop="@dimen/dp_2"
                    app:imgUrl="@{recommendItem.data.itemList.get(2).data.cover.detail}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/iv_left"
                    app:layout_constraintTop_toBottomOf="@id/iv_right1" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <View
            app:layout_constraintTop_toBottomOf="@id/card_view"
            android:layout_marginTop="@dimen/dp_12"
            android:id="@+id/view_line"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/line_ed"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>