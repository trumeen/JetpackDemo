<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="recommendItem"
            type="io.github.trumeen.bean.RecommendItemBean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/dp_15"
        android:paddingEnd="@dimen/dp_15">

        <ImageView
            android:id="@+id/iv_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:onClick="@{(view)->recommendItem.goToVideoPage(view.context,recommendItem.data.content.data)}"
            app:imgUrl="@{recommendItem.data.content.data.cover.detail}"
            app:layout_constraintDimensionRatio="@{@string/pictureFormate(recommendItem.data.content.data.width,recommendItem.data.content.data.height)}"
            app:layout_constraintTop_toTopOf="parent"
            app:radius="@{@dimen/dp_4}" />

        <TextView
            android:id="@+id/tv_desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{recommendItem.data.content.data.description}"
            android:textSize="@dimen/dp_12"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/iv_content"
            tools:text="jin" />

        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="@dimen/dp_25"
            android:layout_height="@dimen/dp_25"
            app:imgUrl="@{recommendItem.data.header.icon}"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_desc"
            app:radius="@{@dimen/dp_25}" />

        <TextView
            android:id="@+id/tv_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{recommendItem.data.header.issuerName}"
            android:textSize="@dimen/dp_12"
            app:layout_constraintBottom_toBottomOf="@id/iv_head"
            app:layout_constraintStart_toEndOf="@id/iv_head"
            app:layout_constraintTop_toTopOf="@id/iv_head"
            tools:text="jin" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>