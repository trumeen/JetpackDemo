<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="content"
            type="io.github.trumeen.bean.ContentItem" />

        <variable
            name="viewModel"
            type="io.github.trumeen.ui.lls.LLSCourseContentViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginStart="@dimen/dp_50"
        android:layout_marginEnd="@dimen/dp_50"
        android:layout_width="match_parent"
        android:background="@drawable/shape_bg_lls_text"
        android:padding="@dimen/dp_10"
        android:layout_height="wrap_content">

        <ImageView
            app:toPreviewPage="@{content.imageUrl}"
            app:layout_constraintBottom_toBottomOf="parent"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:imgGlide="@{content.imageUrl}"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>